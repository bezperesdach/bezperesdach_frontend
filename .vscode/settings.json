{
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "stylelint.enable": true,
  "scss.validate": false,
  "css.validate": false,
  "less.validate": false,
  "stylelint.validate": ["css", "scss"],
  "editor.codeActionsOnSave": {
    "source.formatDocument": true,
    "source.fixAll": true
  },
  "eslint.validate": ["javascript", "typescript", "javascriptreact", "typescriptreact"],
  "eslint.alwaysShowStatus": true,
  "files.eol": "\n",
  "editor.tabSize": 2,
  "editor.insertSpaces": false,
  "editor.formatOnSave": true,
  "cSpell.language": "en,ru",
  "cSpell.ignoreWords": ["Unfollow", "favorited"],
  "cSpell.words": [
    "bezperesdach",
    "bframe",
    "draggable",
    "firstname",
    "Formik",
    "hcaptcha",
    "heatmaps",
    "iframes",
    "metrika",
    "Reaptcha",
    "recaptcha",
    "sitekey",
    "strapi",
    "stylelint",
    "usehooks",
    "useinterval",
    "webp",
    "WithYandexMetrika",
    "YANDEX_METRIKA_ID",
    "yandexMetrikaEnabled",
    "Безпересдач",
    "Капча"
  ]
}
